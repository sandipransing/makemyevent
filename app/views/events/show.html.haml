= content_for :header_js do
  %script{:src=>"http://maps.google.com/maps/api/js?sensor=false"}
= content_for :head do 
  = javascript_include_tag 'jquery.ui.addresspicker'
%ul.qoute-left
  %li{:style => "width:auto;float:left;margin-right:10px;"}
    .thumbnail-100
      = image_tag @event.logo(:medium)
  %li{:style => "padding-top:30px;"}
    %h2= @event.name
  %span.st_facebook_hcount{ displayText: 'Facebook' }
  %span.st_twitter_hcount{ displayText: 'Tweet' }

.7u-first
  %section{:style => "min-height:150px;"}
    %p= @event.description

  %section{:style => "min-height:180px;"}
    %h2 Participants
    - if @event.participants.present?
      %ul
        - count = 0
        - @event.participants.each do |user|
          %li.span-li
            .thubmbnail
              .thumbnail-75
                = link_to(image_tag(user.photo(:thumb)), profile_path(user))
          - break if count == 13
          - count += 1

  - if @event.assets.present?
    #gallery.carousel.slide
      .carousel-inner{:style=>"padding:0px 100px;"}
        - @event.assets.each do |asset|
          - active_class = (@event.assets.first == asset) ? :active : nil
          .5grid.5grid-alt.item{class: active_class}
            .thumbnail-500
              = image_tag asset.attachment(:large)
      %a.carousel-control.left{"data-slide" => "prev", :href => "#gallery"} ‹
      %a.carousel-control.right{"data-slide" => "next", :href => "#gallery"} ›

.5u
  = manage_button(@event)
  = publish_button(@event)
  = participate_button(@event, "button-small")
  %script{ type: "text/javascript", src: "http://w.sharethis.com/button/buttons.js" }

  %br
  %br
  %section{:style => "min-height:150px;"}
    %header
      %h2 Organizers Details
    %ul.quote-list
      %li
        = link_to(image_tag(@event.user.photo(:thumb)), organizer_path(@event.user))
        %p= @event.user.name
        %span= @event.user.mobile
      %li
        %p{:style =>"margin-left:0px;"}
          %label Address: &nbsp; 
          = @event.user.address
        - if @event.user.website.present?
          %p{:style =>"margin-left:0px;"}
            %label Website: &nbsp; 
            = @event.user.website
        - if @event.user.email.present?
          %p{:style =>"margin-left:0px;"}
            %label Email: &nbsp; 
            = @event.user.email

  %section{:style => "min-height:100px;"}
    %ul.quote-list
      %li
        %p{:style =>"margin-left:0px;"} 
          %label Start Date: &nbsp; 
          = @event.start_date.strftime("%d %B %Y %H:%M %p")
        %p{:style =>"margin-left:0px;"} 
          %label End Date: &nbsp;
          = @event.end_date.strftime("%d %B %Y %H:%M %p")
        %p{:style =>"margin-left:0px;"} 
          %label Location: &nbsp;
          = @event.location
  = hidden_field :application, :location, :class => "input-xxlarge", :id => "addresspicker_map"
  = hidden_field :application, :lat, :value => (@event.lat || "18.5204303"), :id => "lat"
  = hidden_field :application, :lng, :value => (@event.lng || "73.85674369999992"), :id => "lng"
  #map-detail

#disqus_thread{:style => "padding-top:50px;"}
  
  
