= content_for :links do
  .links
    = text_field_tag 'search', '', size: 30,placeholder: 'Search events', class: 'search-box'

- @events.each do |event|
  .4u.event{:id => event.id}
    %section
      %header
        %h2= link_to event.name.truncate(30), event, class: 'event-title'
      %ul.quote-list
        %li
          = link_to(image_tag(event.logo(:medium)), event)
          %p= event.organizer_name
          %span= event.organizer_mobile_no
        %p.short_desc
          = event.short_desc.truncate(200)
        %p.participate
          = participate_button(event, 'button-small')

:javascript 
  var events = #{@events.to_json}
